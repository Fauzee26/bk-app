<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/lightBlueishGrey"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/etPelanggarTgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="end"
        android:text="12/31/2019"
        android:textColor="@color/darkBlue"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/etPelanggarNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Farras Doko"
        android:textColor="@color/darkBlue"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/etPelanggarKelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="XII RPL"
        android:textColor="@color/darkBlue"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/etPelanggarList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Cabut Kelas, Cabut Halaqoh"
        android:textColor="@color/darkBlue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/etPelanggarWali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="serif"
        android:gravity="end"
        android:text="Mr. Bobi"
        android:textColor="@color/darkBlue"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>